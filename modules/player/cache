#NAMESPACE=player_cache

dependencies::depends "util/ytdl"

function get_or_download(item) {
    this::cache $item
    if [[ -f $CACHE_DIR/$item ]]
    then
        cat $CACHE_DIR/$item
    fi
}

function cache(item) {
    if [[ -f $CACHE_DIR/$item ]]
    then
	    logger::log info "cache exists"
    else
        logger::log warn "$item does not exist, attempting download"
	    util_ytdl::download "$item"
    fi
}