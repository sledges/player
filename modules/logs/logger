#NAMESPACE=logger

function log(loglevel logstring) {
    case $loglevel in
        error)
            echo -e "\033[31;1m$logstring\033[37;1m"
        ;;
        warn)
            echo -e "\033[93;1m$logstring\033[37;1m"
        ;;
        info)
            echo -e "\033[32;1m$logstring\033[37;1m"
        ;;
        *)
            echo -e "$logstring"
        ;;
    esac

}